@{
    ViewBag.Title = "Student";
    Layout = "~/Views/Shared/_Adviser.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            margin: 50px;
        }

        .date-range {
            display: flex;
            align-items: center;
            gap: 20px;
        }

            .date-range label {
                margin-right: 10px;
            }

        .total-students {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">

        <div class="date-range">
            <label for="start-date">From</label>
            <input type="date" id="start-date" value="2024-05-26">
            <label for="end-date">To</label>
            <input type="date" id="end-date" value="2024-06-26">
            <label for="duration">Duration</label>
            <input type="number" id="duration" value="30" readonly> Days
        </div>
        <div class="total-students">
            <strong>Total Students:</strong> <span id="total-students">50</span>
        </div>
    </div>
</body>
</html>
