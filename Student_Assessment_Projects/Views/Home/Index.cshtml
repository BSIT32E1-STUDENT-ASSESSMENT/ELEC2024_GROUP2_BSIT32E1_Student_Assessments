@{
    ViewBag.Title = "Adviser Module";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .wrapper {
            display: flex;
            min-height: 100vh;
        }



        .main-content {
            flex: 1;
            padding: 20px;
        }

        .header {
            background-color: #f4f4f4;
            color: #333;
            padding: 10px 20px;
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }

            .header .greeting {
                background-color: #EBE8FC;
                color: #4C50A9;
                padding: 15px 25px;
                border-radius: 10px;
                font-weight: bold;
                margin-right: 20px;
            }

            .header .user-info {
                display: flex;
                align-items: center;
            }

                .header .user-info img {
                    width: 50px;
                    height: 50px;
                    border-radius: 50%;
                    margin-right: 10px;
                }

                .header .user-info .user-details {
                    display: flex;
                    flex-direction: column;
                }

                    .header .user-info .user-details .name {
                        font-weight: bold;
                    }

                    .header .user-info .user-details .role {
                        color: #666;
                    }
    </style>

</head>

<body>

    <div class="main-content">
        <div class="header">
            <div class="greeting">Hello!</div>
            <div class="user-info">

                <img src="~/Content/Images/user-avatar.png" alt="User Avatar">
                <div class="user-details">
                    <div class="name">Aubrey Villareal</div>
                    <div class="role">Adviser Name</div>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="white-box">
                <div class="section-header">
                    <div class="section-info">
                        <span>Section Name</span>
                        <span class="grade">Grade 10</span>
                    </div>
                    <div class="actions">
                        <button class="delete"><i class="fas fa-trash-alt"></i> Delete</button>
                        <button class="filters"><i class="fas fa-filter"></i> Filters</button>
                        <button class="export"><i class="fas fa-file-export"></i> Export from Excel</button>
                        <button class="add-new"><i class="fas fa-plus"></i> Add New</button>
                    </div>
                </div>
                <div class="section-body">
                    <!-- Additional content goes here -->
                    <p>Student Name</p>
                </div>
            </div>
        </div>
    </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</body>
</html>