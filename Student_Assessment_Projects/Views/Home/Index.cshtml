<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/styles.css">
    <title>Full-Screen Form Popup</title>
</head>
<body>
    <header>
        <nav class="navbar1">
            <a href="#" class="navbar-logo">
                <img src="logo.png" alt="Logo">
                <h2>SHS Hub</h2>
            </a>
            <div class="navbar-links">
                <a href="#">Dashboard</a>
                <a href="#">Advisory</a>
                <a href="#">Students</a>
                <button class="navbar-login-btn">Login</button>
            </div>
            <div class="navbar-hamburger-btn">☰</div>
        </nav>
    </header>

    <div class="form-popup1" id="form-popup">
        <div class="form-box">
            <span class="form-close-btn" id="form-close-btn">×</span>
            <div class="form-content">
                <h2>Login</h2>
                <form action="#">
                    <div class="input-field">
                        <input type="email" required>
                        <label>Email</label>
                    </div>
                    <div class="input-field">
                        <input type="password" required>
                        <label>Password</label>
                    </div>
                    <button type="submit">Login</button>
                </form>
                <a href="#" class="forgot-pass-link">Forgot Password?</a>
                <a href="#" class="signup-link">Don't have an account? Sign Up</a>
            </div>
            <div class="signup-content">
                <h2>Sign Up</h2>
                <form action="#">
                    <div class="input-field">
                        <input type="text" required>
                        <label>Full Name</label>
                    </div>
                    <div class="input-field">
                        <input type="email" required>
                        <label>Email</label>
                    </div>
                    <div class="input-field">
                        <input type="password" required>
                        <label>Password</label>
                    </div>
                    <label class="policy-text">
                        <input type="checkbox" required>
                        I agree to the <a href="#">terms and conditions</a>
                    </label>
                    <button type="submit">Sign Up</button>
                </form>
            </div>
        </div>
    </div>

    <div class="blur-bg-overlay" id="blur-bg-overlay"></div>

    <footer class="footer">
        <div>
            <h3>About Us</h3>
            <ul>
                <li><a href="#">Company</a></li>
                <li><a href="#">Team</a></li>
                <li><a href="#">Careers</a></li>
            </ul>
        </div>
        <div>
            <h3>Support</h3>
            <ul>
                <li><a href="#">Help Center</a></li>
                <li><a href="#">Contact Us</a></li>
            </ul>
        </div>
        <div>
            <h3>Subscribe</h3>
            <div class="subscribe">
                <input type="email" placeholder="Your Email">
                <button>Subscribe</button>
            </div>
        </div>
        <div class="social-icons">
            <a href="#"><img src="icon-facebook.png" alt="Facebook"></a>
            <a href="#"><img src="icon-twitter.png" alt="Twitter"></a>
            <a href="#"><img src="icon-instagram.png" alt="Instagram"></a>
        </div>
    </footer>
    <div class="copyright">© 2024 SHS Hub. All rights reserved.</div>

    <script>
        document.querySelector('.navbar-login-btn').addEventListener('click', function () {
            document.getElementById('form-popup').classList.add('show-popup');
            document.getElementById('blur-bg-overlay').classList.add('show-popup');
        });

        document.getElementById('form-close-btn').addEventListener('click', function () {
            document.getElementById('form-popup').classList.remove('show-popup');
            document.getElementById('blur-bg-overlay').classList.remove('show-popup');
        });

        document.querySelector('.signup-link').addEventListener('click', function () {
            document.querySelector('.form-content').style.display = 'none';
            document.querySelector('.signup-content').style.display = 'block';
        });

        document.querySelector('.forgot-pass-link').addEventListener('click', function () {
            // Add functionality for forgot password if needed
        });
    </script>
</body>
</html>
