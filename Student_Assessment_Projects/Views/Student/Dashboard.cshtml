@model Student_Assessment_Projects.Models.Student
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - Student Info</title>
    <link rel="stylesheet" href="/css/Dash.css">
</head>
<body>
    <h2>Student Dashboard</h2>
    <div class="container">
        <div class="student-info">
            <p>Welcome, @Model.FullName</p>
            <p>Your recommended strand: @ViewBag.Strand</p>
        </div>
        <h3>Your Grades</h3>
        <hr>

        <div class="grades">
            <table>
                <thead>
                    <tr>
                        <th>Subject</th>
                        <th>Year</th>
                        <th>Final Score</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var grade in Model.Grades)
                    {
                        <tr>
                            <td>@grade.Subject</td>
                            <td>@grade.Year</td>
                            <td>@grade.Score</td>
                        </tr>
                    }
                </tbody>
            </table>

            <hr>
            <ul>
                @foreach (var grade in Model.Grades)
                {
                    <li>@grade.Subject (Year @grade.Year): @grade.Score</li>
                }
            </ul>
            <div class="result-suggestions">
                <h3>Result Strand Suggestion:</h3>
                <div class="suggestions">
                    <div class="primary">
                        <h4>Primary</h4>
                        <img src="/images/Stem.png" alt="STEM Logo" class="primary-img">
                    </div>
                    <div class="secondary">
                        <h4>Secondary</h4>
                        <img src="/images/Humss.png" alt="HUMSS Logo" class="secondary-img">
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
