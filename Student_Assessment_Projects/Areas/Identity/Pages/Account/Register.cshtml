@page
@model LoginModel

<body>
    
<link rel="stylesheet" href="~/css/LoginCSS.css" />

<p>STUDENT ASSESSMENT FOR SENIOR HIGH SCHOOL STRAND</p>

<div class="text-centers mb-4">
    <img src="~/images/picture.png" alt="Description of Image" class="login-image" />
</div>

<div class="login-container">
    <div class="form-section col-md-4">
        <section>
            <div class="text-center mb-4">
                <img src="~/images/login icon.png" alt="Description of Image" class="login-image" />
            </div>
            <div class="background-image">

    <div class="container">
        <h1>Please Fill Out Form to Register</h1>
        <form action="#">
            <div class="form-group">
                <label for="fullName">Full Name:</label>
                <br />
                <input type="text" id="fullName" name="fullName" placeholder="Enter your full name" required>
            </div>
            <div class="form-group">
                <label for="username">Username:</label>
                <br />
                <input type="text" id="username" name="username" placeholder="Enter your username" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                                <br />
                <input type="email" id="email" name="email" placeholder="Enter your email" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                                <br />
                <input type="password" id="password" name="password" placeholder="Enter the password" required>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password:</label>
                                <br />
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required>
            </div>
            <div class="form-group">
                <button type="submit">Register</button>
            </div>
            <br />
                            <a class="Login" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already have account?</a>
        </form>

    </div>
    </div>
    </section>
    </div>
    </div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}